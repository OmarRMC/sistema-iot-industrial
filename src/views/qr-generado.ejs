<%- include('partials/header') %>

    <div class="max-w-xl mx-auto px-4 py-12">
        <div class="bg-white border border-gray-200 shadow-md rounded-2xl p-6 text-center">

            <!-- Título -->
            <h1 class="text-2xl font-bold text-gray-800 mb-6 flex items-center justify-center gap-2">
                <i class="fas fa-qrcode text-blue-600 text-2xl"></i>
                Código QR
            </h1>

            <!-- Imagen QR (tamaño intermedio) -->
            <div class="flex justify-center mb-6">
                <img id="qrImage" src="<%= qr %>" alt="Código QR"
                    class="border border-gray-300 rounded-lg shadow-lg w-64 h-64 object-contain">
            </div>

            <!-- Botón de descarga -->
            <a id="downloadBtn" href="<%= qr %>" download="qr.png"
                class="inline-flex items-center justify-center gap-2 px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md transition w-full max-w-xs mx-auto">
                <i class="fas fa-download"></i>
                Descargar QR
            </a>
        </div>
    </div>

    <%- include('partials/footer') %>